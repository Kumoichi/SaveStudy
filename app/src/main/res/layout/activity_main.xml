<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Enter your details"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="32dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/subject_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginTop="10dp"
        android:hint="enter subject"
        android:textColor="@color/black"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="22sp"/>


    <TextView
        android:id="@+id/taskView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subject_ed"
        android:layout_marginTop="10dp"
        android:text="To do task"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/toDoTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/taskView"
        android:layout_marginTop="10dp"
        android:text="Task"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/timeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time you studied"
        android:layout_below="@+id/toDoTask"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/timeData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeView"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="22sp"/>


    <Button
        android:id="@+id/insert_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/goTimer_btn"
        android:layout_below="@+id/timeData"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="@color/black"
        android:text="Insert Data"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/goTimer_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="78dp"
        android:backgroundTint="@color/black"
        android:text="go to timer"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:textStyle="bold" />


</RelativeLayout>

