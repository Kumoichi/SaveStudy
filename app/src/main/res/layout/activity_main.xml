<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/backgroundfour"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Enter study details"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="32dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textsubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/text"
        android:textColor="@color/black"></TextView>

    <EditText
        android:id="@+id/subject_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textsubject"
        android:layout_marginTop="10dp"
        android:hint="enter subject"
        android:textColor="@color/black"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="22sp" />

    <TextView
        android:fontFamily=""
        android:id="@+id/taskView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subject_ed"
        android:layout_marginTop="10dp"
        android:text="To do task"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="22sp" />


    <EditText
        android:id="@+id/toDoTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/taskView"
        android:layout_marginTop="10dp"
        android:hint="enter to do task"
        android:textColor="@color/black"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="22sp"></EditText>


    <TextView
        android:id="@+id/timeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toDoTask"
        android:layout_marginTop="15dp"
        android:text="Time you studied"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/timeData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeView"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="22sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/insert_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeData"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:background="@drawable/round_button"
        android:textColor="@color/white"
        android:height="150dp"
        android:width="150dp"
        android:text="Insert Data"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:textStyle="bold" />

</RelativeLayout>

