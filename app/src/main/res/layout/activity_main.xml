<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Enter your details"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="32dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/subject_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Name"
        android:layout_below="@+id/text"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/taskView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To do task"
        android:layout_below="@+id/subject_ed"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/toDoTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task"
        android:layout_below="@+id/taskView"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/timeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time you studied"
        android:layout_below="@+id/toDoTask"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/timeData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5"
        android:layout_below="@+id/timeView"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="22sp"/>

    <Button
        android:id="@+id/insert_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeData"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/black"
        android:textSize="22sp"
        android:text="Insert Data"
        android:textAllCaps="false"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/view_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/insert_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/black"
        android:textSize="22sp"
        android:text="View Data"
        android:textAllCaps="false"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/total_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/black"
        android:textSize="22sp"
        android:text="show total"
        android:textAllCaps="false"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/total_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time"
        android:layout_below="@+id/total_btn"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="22sp"/>

</RelativeLayout>

