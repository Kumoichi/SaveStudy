<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/backgroundfour"
    tools:context=".Timer">

    <Chronometer
        android:layout_marginTop="40dp"
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="@drawable/layout_bg"
        android:layout_width="350dp"
        android:layout_height="570dp"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="40dp"
                    android:height="90dp"
                    android:background="@drawable/round_button"
                    android:onClick="startChronometer"
                    android:text="Start"
                    android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="20dp"
                    android:height="90dp"
                    android:background="@drawable/round_button"
                    android:onClick="pauseChronometer"
                    android:text="Pause"
                    android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:height="90dp"
                    android:background="@drawable/round_button"
                    android:onClick="resetChronometer"
                    android:text="Reset"
                    android:textColor="@color/white" />

            </LinearLayout>

            <ImageView
                android:layout_width="180dp"
                android:layout_height="130dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/handthree"
                android:onClick="displayChronometer"></ImageView>
        </RelativeLayout>


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifimage"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:padding="45dp"
        android:src="@drawable/studyingdog"
        android:visibility="invisible" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/stopgif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="70dp"
        android:src="@drawable/stoppeddog"
        android:visibility="invisible" />
    </LinearLayout>
</LinearLayout>